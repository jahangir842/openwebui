Bootstrap: docker
From: ghcr.io/open-webui/open-webui:main

%labels
    Author Jahangir
    Version 1.0

%environment
    export OLLAMA_BASE_URL=http://192.15.212.202
    export PORT=8080

%files
    # Add any local files if needed
    # Example: ./config.json /app/config.json

%startscript
    # Use the actual startup script found in the container
    echo "Starting Open WebUI via start.sh..."
    cd /app/backend && ./start.sh

%post
    # Additional setup during build
    echo "Building container..."
    mkdir -p /app/backend/data  # Create volume mount point