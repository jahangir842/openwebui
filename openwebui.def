Bootstrap: docker
From: ghcr.io/open-webui/open-webui:main

%labels
    Author Your Name
    Version 1.0.0

%files
    # You can add any local config files here if needed

%environment
    export LC_ALL=C
    export WEBUI_SECRET_KEY=your-secret-key-here
    export OLLAMA_API_BASE_URL=http://localhost:11434
    # Add other required environment variables here

%runscript
    exec /app/backend/start.sh

%post
    # Install the required package
    apt-get update && apt-get install -y python3-pip
    pip install --no-cache-dir "huggingface_hub[hf_xet]"
    
    # Your existing post commands
    mkdir -p /app/backend/{database,config,logs,data/cache}
    chmod -R 755 /app/backend
